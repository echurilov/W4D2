<h1>New Cat!</h1>

<form action="/cats" method = "post">
  <label>Name:
    <input type="text" name="cats[name]" value="">
    <br>
  </label>
  <label>Sex:
    <input type="radio" name="cats[sex]" value="M">M
      <input type="radio" name="cats[sex]" value="F">F
    <br>
  </label>
  <label>Color:
    <select name="cats[color]" id="cats_color"> 
      <option value="" selected="true" disabled="true">-- select a color --</option>
      <%Cat::COLORS.each do |color|%>
      <option value="<%=color.key%>"><%=color.value%></option>
      <% end %>
    </select>
    <br>
  </label>
  <label> Birthday:
    <input type="date" name="cats[birth_date]" value="">
    <br>
  </label>
  <label>Description:
    <input type="textarea" name="cats[description]" value="">
    <br>
  </label>
  <input type="submit" value="New Cat">
</form>